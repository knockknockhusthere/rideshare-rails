<h2> Passengers List</h2>
<main>
  <table>
    <tr>
      <th>Passenger ID</th>
      <th>Name</th>
      <th>Phone Number</th>
      <th>Actions</th>
    </tr>
    <% @passengers.each do |passenger| %>
    <tr>
      <td><%= passenger.id %></td>
      <td><%= link_to(passenger.name, passenger_path(passenger)) %></td>
      <td><%= passenger.phone_num %></td>
      <td><%= link_to("Edit", edit_passenger_path(passenger)) %>
    <%= link_to("Delete", passenger_path(passenger.id), method: :delete, data: { confirm: "Are you sure you want to delete #{ passenger.name }?" }) %></td>

    </tr>
    <% end %>
  </table>
</main>
