<h2> Driver's Page</h2>

<main>
  <table>
    <tr>
      <th>Driver ID</th>
      <th>Name</th>
      <th>VIN</th>
      <th>Actions</th>
    </tr>
    <% @drivers.each do |driver| %>
    <tr>
      <td><%= driver.id %></td>
      <td><%= link_to(driver.name, driver_path(driver)) %></td>
      <td><%= driver.vin %></td>
      <td><button><%= link_to("Edit", edit_driver_path(driver)) %></button>
    <button><%= link_to("Delete", driver_path(driver.id), method: :delete, data: { confirm: "Are you sure you want to delete #{ driver.name }?" }) %></button></td>

    </tr>
    <% end %>
  </table>
</main>
